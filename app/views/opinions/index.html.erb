<div class="homepage-container">
  <div class="opinion-list">
    <nav class="opinion-list-nav width-100 margin-b-1">
      <ul class="width-95 centered-horizontal margin-b-0">
        <li class="padding-1 opinion-li">OPINIONS</li>
        <li></li>
        <li></li>
        <li></li>
      </ul>
    </nav>
    <div class="opinion-form white-bg width-95 padding-y-1 rounded-corners-half">
      <%=form_for(@opinion) do |f| %>
      <div class="width-100">
        <h3 class="width-95 centered-horizontal padding-y-1">
          <%= f.label :text, "DO YOU HAVE SOME OPINION ON YOUR MIND?", class:"opinion-form-heading" %>
        </h3>
        <div class="new-opinion-container">
        <%= f.text_area(
          :text,
          autofocus: true,
          autocomplete: "text",
          class: 'rounded-corners-half width-95 padding-1 opinion-text-area',
          placeholder:"Post a new opinion here..."
          )%>
        </div>
      </div>
      <%end%>
    </div>
    <div class="opinion-listing white-bg width-95 margin-y-1 padding-y-1 rounded-corners-half">
      <div class="individual-opinion-container width-95 centered-horizontal">
        <%=image_tag "opinions-icon.svg", class:'width-100 rounded-corners-half'%>
        <div class="opinion-content">
          <h3>AuthorName</h3>
          <div>
            Opinion body
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="homepage-right-side">rrrrrrrrrrrrrr</div>
</div>
